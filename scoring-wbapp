<body>
    <div class="container">
        <h1>üèè Cricket Scorer</h1>
        
        <div class="innings-selector">
            <button class="innings-btn active" onclick="switchInnings(1)">Innings 1</button>
            <button class="innings-btn" onclick="switchInnings(2)">Innings 2</button>
        </div>

        <div class="scoreboard">
            <div class="score-display">
                <span id="runs">0</span>/<span id="wickets">0</span>
            </div>
            <div class="over-info">
                Over: <span id="currentOver">0.0</span> / 2.0
            </div>
            <div class="ball-tracker" id="ballTracker"></div>
        </div>

        <div class="controls">
            <button class="btn-runs" onclick="addRuns(0)">0</button>
            <button class="btn-runs" onclick="addRuns(1)">1</button>
            <button class="btn-runs" onclick="addRuns(2)">2</button>
            <button class="btn-runs" onclick="addRuns(3)">3</button>
            <button class="btn-runs" onclick="addRuns(4)">4</button>
            <button class="btn-runs" onclick="addRuns(6)">6</button>
            <button class="btn-wicket" onclick="addWicket()">Wicket</button>
            <button class="btn-extra" onclick="addWide()">Wide</button>
            <button class="btn-extra" onclick="addNoBall()">No Ball</button>
            <button class="btn-undo" onclick="undo()">‚Ü∂ Undo</button>
            <button class="btn-reset" onclick="resetMatch()">Reset</button>
        </div>

        <div class="match-summary">
            <h3>Match Status</h3>
            <div class="summary-row">
                <span>Innings 1:</span>
                <span id="innings1Summary">0/0 (0.0 overs)</span>
            </div>
            <div class="summary-row">
                <span>Innings 2:</span>
                <span id="innings2Summary">0/0 (0.0 overs)</span>
            </div>
            <div class="summary-row" id="result" style="font-weight: bold; color: #667eea;"></div>
        </div>
    </div>

    <script>
        let currentInnings = 1;
        let matchData = {
            1: { runs: 0, wickets: 0, balls: 0, ballHistory: [] },
            2: { runs: 0, wickets: 0, balls: 0, ballHistory: [] }
        };

        function getCurrentData() {
            return matchData[currentInnings];
        }

        function updateDisplay() {
            const data = getCurrentData();
            document.getElementById('runs').textContent = data.runs;
            document.getElementById('wickets').textContent = data.wickets;
            
            const overs = Math.floor(data.balls / 6);
            const ballsInOver = data.balls % 6;
            document.getElementById('currentOver').textContent = `${overs}.${ballsInOver}`;

            updateBallTracker();
            updateSummary();
            checkMatchEnd();
        }

        function updateBallTracker() {
            const data = getCurrentData();
            const tracker = document.getElementById('ballTracker');
            tracker.innerHTML = '';
            
            data.ballHistory.forEach(ball => {
                const div = document.createElement('div');
                div.className = `ball ${ball.class}`;
                div.textContent = ball.display;
                tracker.appendChild(div);
            });
        }

        function addRuns(runs) {
            const data = getCurrentData();
            if (data.balls >= 12 || data.wickets >= 2) return;

            data.runs += runs;
            data.balls++;
            data.ballHistory.push({
                class: `runs-${runs}`,
                display: runs,
                type: 'runs',
                value: runs
            });

            updateDisplay();
        }

        function addWicket() {
            const data = getCurrentData();
            if (data.balls >= 12 || data.wickets >= 2) return;

            data.wickets++;
            data.balls++;
            data.ballHistory.push({
                class: 'wicket',
                display: 'W',
                type: 'wicket'
            });

            updateDisplay();
        }

        function addWide() {
            const data = getCurrentData();
            if (data.balls >= 12 || data.wickets >= 2) return;

            data.runs++;
            data.ballHistory.push({
                class: 'wide',
                display: 'Wd',
                type: 'wide'
            });

            updateDisplay();
        }

        function addNoBall() {
            const data = getCurrentData();
            if (data.balls >= 12 || data.wickets >= 2) return;

            data.runs++;
            data.ballHistory.push({
                class: 'noball',
                display: 'Nb',
                type: 'noball'
            });

            updateDisplay();
        }

        function undo() {
            const data = getCurrentData();
            if (data.ballHistory.length === 0) return;

            const lastBall = data.ballHistory.pop();

            if (lastBall.type === 'runs') {
                data.runs -= lastBall.value;
                data.balls--;
            } else if (lastBall.type === 'wicket') {
                data.wickets--;
                data.balls--;
            } else if (lastBall.type === 'wide' || lastBall.type === 'noball') {
                data.runs--;
            }

            updateDisplay();
        }

        function switchInnings(innings) {
            currentInnings = innings;
            
            document.querySelectorAll('.innings-btn').forEach((btn, idx) => {
                btn.classList.toggle('active', idx + 1 === innings);
            });

            updateDisplay();
        }

        function updateSummary() {
            for (let i = 1; i <= 2; i++) {
                const data = matchData[i];
                const overs = Math.floor(data.balls / 6);
                const ballsInOver = data.balls % 6;
                const overDisplay = ballsInOver > 0 ? `${overs}.${ballsInOver}` : overs;
                
                document.getElementById(`innings${i}Summary`).textContent = 
                    `${data.runs}/${data.wickets} (${overDisplay} overs)`;
            }
        }

        function checkMatchEnd() {
            const inn1 = matchData[1];
            const inn2 = matchData[2];
            const resultDiv = document.getElementById('result');

            if (inn1.balls >= 12 || inn1.wickets >= 2) {
                if (inn2.balls >= 12 || inn2.wickets >= 2 || inn2.runs > inn1.runs) {
                    if (inn2.runs > inn1.runs) {
                        resultDiv.textContent = `Team 2 wins by ${2 - inn2.wickets} wickets!`;
                    } else if (inn1.runs > inn2.runs) {
                        resultDiv.textContent = `Team 1 wins by ${inn1.runs - inn2.runs} runs!`;
                    } else {
                        resultDiv.textContent = 'Match Tied!';
                    }
                } else {
                    resultDiv.textContent = `Target: ${inn1.runs + 1} runs`;
                }
            } else {
                resultDiv.textContent = '';
            }
        }

        function resetMatch() {
            if (confirm('Reset the entire match?')) {
                matchData = {
                    1: { runs: 0, wickets: 0, balls: 0, ballHistory: [] },
                    2: { runs: 0, wickets: 0, balls: 0, ballHistory: [] }
                };
                currentInnings = 1;
                switchInnings(1);
                updateDisplay();
            }
        }

        updateDisplay();
    </script>
</body>
</html>